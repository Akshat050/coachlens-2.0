{
  "manifest_version": 3,
  "name": "CoachLens 2.0",
  "version": "1.0.0",
  "description": "Transform any webpage into an interactive classroom with AI-powered learning tools",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tts"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "CoachLens 2.0 - AI Learning Companion"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}